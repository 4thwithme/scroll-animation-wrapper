{
  "compilerOptions": {
    "target": "es5",
    "lib": ["es2016", "dom"],
    "module": "commonjs",
    "declaration": true,
    "jsx": "react",
    "strict": true,
    "esModuleInterop": true,
    "outDir": "./lib",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "removeComments": true,
    "sourceMap": true,
    "typeRoots": ["./src/index.d.ts", "node_modules/@types"]
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
